<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bt_validatedelivery">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_your_trip"
                        android:textSize="16sp"
                        android:textColor="@color/grey"
                        android:text="@string/your_path"/>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/iv_vehicle"
                        android:src="@drawable/bike_blue"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/tv_your_trip"
                        android:contentDescription="@string/desc" />

                    <View
                        android:layout_width="40dp"
                        android:layout_height="2dp"
                        android:id="@+id/progress1"
                        android:layout_toEndOf="@+id/iv_vehicle"
                        android:layout_alignTop="@+id/iv_vehicle"
                        android:layout_marginTop="24dp"
                        android:background="@color/colorPrimary"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"/>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/iv_pickup"
                        android:src="@drawable/pickup_blue"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/tv_your_trip"
                        android:contentDescription="@string/desc"
                        android:layout_toEndOf="@id/progress1"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:id="@+id/progress2"
                        android:layout_toEndOf="@+id/iv_pickup"
                        android:layout_alignTop="@+id/iv_vehicle"
                        android:layout_marginTop="24dp"
                        android:background="@color/colorPrimary"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="60dp"
                        android:orientation="vertical"/>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/iv_dropoff"
                        android:src="@drawable/dropoff_blue"
                        android:contentDescription="@string/desc"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/tv_your_trip"
                        android:layout_alignParentEnd="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_pickup_duration"
                        android:layout_alignStart="@id/progress1"
                        android:layout_alignEnd="@id/progress1"
                        android:layout_below="@id/progress1"
                        android:layout_marginTop="5dp"
                        android:text="@string/pickup_estimation"
                        android:textColor="@color/colorBlack"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_dropoff_duration"
                        android:layout_alignStart="@id/progress2"
                        android:layout_alignEnd="@id/progress2"
                        android:layout_below="@id/progress2"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorBlack"
                        android:textAlignment="center"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                android:layout_marginTop="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_your_contact"
                        android:textSize="16sp"
                        android:textColor="@color/grey"
                        android:text="@string/delivery_contact"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_name"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/grey"
                        android:text="@string/name"
                        android:layout_marginStart="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_contact_name"
                        android:textColor="@color/colorBlack"
                        android:layout_marginStart="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_phone"
                        android:layout_marginTop="10dp"
                        android:text="@string/phone_number"
                        android:textColor="@color/grey"
                        android:layout_marginStart="5dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_contact_phone"
                        android:textColor="@color/colorBlack"
                        android:layout_marginStart="5dp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                android:layout_marginTop="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/package_info"
                        android:textSize="16sp"
                        android:textColor="@color/grey"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_weight="5"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_user"
                            android:layout_width="60dp"
                            android:layout_height="80dp"
                            android:layout_weight="2"
                            android:contentDescription="@string/desc" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_weight="3"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_package"
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:layout_weight="2"
                                android:contentDescription="@string/desc" />

                            <TextView
                                android:id="@+id/tv_package_weight"
                                android:layout_width="60dp"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:textColor="@color/colorBlack" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                android:layout_marginTop="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_your_price"
                        android:textSize="16sp"
                        android:textColor="@color/grey"
                        android:text="@string/the_price"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_price"
                        android:textSize="40sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_paymentinfo"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/deliveryman_will_be_paid_on_dropoff"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:textAlignment="center"/>

                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/pb_validatedelivery"
                        android:visibility="gone"
                        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="199dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="205dp"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    tools:srcCompat="@drawable/cash" />

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="236dp"
                    android:clickable="true"
                    android:layout_height="match_parent"
                    tools:srcCompat="@drawable/card" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bt_validatedelivery"
        android:text="@string/validate_delivery"
        style="@style/ButtonMain"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>